<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iliutaadrian.hikerwatch.MainActivity"
    android:background="@drawable/bg">

    <fragment
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="30sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="casual"
        android:text="@string/title"
        android:textColor="@color/work"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/latitudeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:paddingEnd="50sp"
        android:paddingStart="50sp"
        android:textColor="@color/work"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/longitudeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/latitudeText"
        android:layout_below="@+id/latitudeText"
        android:layout_marginTop="17dp"
        android:textColor="@color/work"
        android:paddingStart="50sp"
        android:paddingEnd="50sp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/longitudeText"
        android:layout_below="@+id/longitudeText"
        android:layout_marginTop="17dp"
        android:textColor="@color/work"
        android:paddingStart="50sp"
        android:paddingEnd="50sp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/adressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/countryText"
        android:layout_below="@+id/countryText"
        android:layout_marginTop="17dp"
        android:textColor="@color/work"
        android:paddingStart="50sp"
        android:paddingEnd="50sp"
        android:text=""
        android:textSize="20sp" />
</RelativeLayout>
